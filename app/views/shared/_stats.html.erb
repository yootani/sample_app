<!-- VIEW 'followed' and 'follower' statisic  -->

<!-- if '@user' isn't nill(profilePage),no action  -->
<!--  else(homePage), set 'currentUser' to '@user'   -->
<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div><!-- stats_end -->
